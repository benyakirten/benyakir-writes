{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM"],
    "jsx": "preserve",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@Blocks/*": ["src/components/Blocks/*"],
      "@Gen/*": ["src/components/General/*"],
      "@Input/*": ["src/components/Input/*"],
      "@Pre/*": ["src/components/Prefix/*"],
      "@Posts/*": ["src/components/Posts/*"],
      "@Layout/*": ["src/components/Layout/*"],
      "@Variant/*": ["src/components/Variants/*"],
      "@Styles/*": ["src/styles/*"],
      "@StyleVars": ["src/styles/variables.ts"],
      "@Animations": ["src/styles/animations.ts"],
      "@Utils/*": ["src/utils/*"],
      "@Images/*": ["src/images/*"],
      "@Tech/*": ["src/images/tech/*"],
      "@Constants": ["src/data/constants.ts"],
      "@Hooks/*": ["src/hooks/*"],
      "@Types/*": ["src/types/*"]
    }, 
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
