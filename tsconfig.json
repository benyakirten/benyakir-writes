{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["DOM"],
		"jsx": "preserve",
		"strict": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@Store/*": ["src/store/*"],
			"@TestProps": ["__tests__/props.ts"],
			"@TestUtils": ["__tests__/test-utils.tsx"]
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	}
}
